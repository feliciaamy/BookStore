<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blueprint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|center_vertical"
        android:padding="0dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="0"
            android:text="TextView" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:text="TextView" />

        <RatingBar
            android:id="@+id/rate_comment"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/soso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="140dp"
            android:padding="5dp"
            android:text="soso"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="140dp"
            android:padding="5dp"
            android:text="unlike"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/likeButton"
            android:layout_alignStart="@+id/likeButton"
            android:layout_below="@+id/likeButton"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="140dp"
            android:padding="5dp"
            android:text="like"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:padding="8dp"
            android:text="Comment" />

        <ImageButton
            android:id="@+id/sosoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_comment"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:layout_toLeftOf="@+id/unlikeButton"
            android:layout_toStartOf="@+id/unlikeButton"
            android:background="@null"
            android:padding="10dp"
            android:visibility="visible"
            card_view:srcCompat="@drawable/ic_soso" />

        <ImageButton
            android:id="@+id/likeButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_comment"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="100dp"
            android:layout_toLeftOf="@+id/sosoButton"
            android:layout_toStartOf="@+id/sosoButton"
            android:background="@null"
            android:padding="10dp"
            android:visibility="visible"
            card_view:srcCompat="@drawable/like" />

        <ImageButton
            android:id="@+id/unlikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rate_comment"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:background="@null"
            android:padding="10dp"
            android:visibility="visible"
            card_view:srcCompat="@drawable/ic_unlike" />

    </android.support.v7.widget.CardView>
</RelativeLayout>